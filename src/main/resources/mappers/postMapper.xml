	<insert id="creatRecruitment" parameterType="map">
	
		INSERT INTO
		
			`recruitment-post`
		(
			`userId`
			, `title`
			, `content`
			, `mapPath`
			, `personnel`
			, `appointmentStartDate`
			, `appointmentEndDate`
			, `info`

		)
		VALUE
		(
			#{param1}
			, #{param2}
			, #{param3}
			, #{param4}
			, #{param5}
			, #{param6}
			, #{param7}
			, #{param8}
		)
		
	</insert>
	
